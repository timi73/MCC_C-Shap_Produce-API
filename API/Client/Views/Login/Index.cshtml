@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}
<div class="row justify-content-center">

    <div class="col-xl-5 col-lg-6 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome</h1>
                            </div>
                            <form action="/Login/Auth" method="post" class="user" id="loginUser">
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control form-control-user"
                                           id="inputEmail" aria-describedby="emailHelp"
                                           placeholder="Enter Email Address...">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-user"
                                           id="inputPassword" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">
                                            Remember
                                            Me
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" id="btnLogin" class="btn btn-primary btn-user btn-block">Login</button>
                                @*<a  asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-user btn-block">
                                    Login
                                </a>*@
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="register.html">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts{
    <script src="~/js/model/login.js"></script>
}
