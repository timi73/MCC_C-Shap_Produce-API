@{
    ViewData["Title"] = "List Employees";
    Layout = "_LayoutSBAdmin2";
}
<div class="text-center">
    <h1 class="display-4" id="listEm">Employees</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col d-flex flex-row-reverse">
        <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#modalAddEmp" onclick="FormAdd()"><i class="fa fa-plus-circle" aria-hidden="true"> </i> Add Employee</button>
    </div>
</div>

<div class="row">
    <div class="col">
        <table id="employeeTable" class="table table-striped table-bordered nowrap">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Action</th>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Email</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Phone</th>
                    <th scope="col">GPA</th>
                    <th scope="col">Degree</th>
                    <th scope="col">University</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody class="tbEmployeesBody">
                <tr>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAddEmp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-lg modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Employee</h5>
            </div>
            <form id="formEmp">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-6">
                                <input type="text" class="form-control" id="nik" hidden>
                                <input type="text" class="form-control" id="educationId" hidden>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="firstName">Frist Name</label>
                                            <input required type="text" class="form-control" id="firstName" pattern="^[a-zA-Z]+$" title="Contains only alphabet">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="lastName">Last Name</label>
                                            <input required type="text" class="form-control" id="lastName" pattern="^[a-zA-Z]+$" title="Contains only alphabet">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="gender">Gender</label>
                                    <select id="gender" class="form-control" required>
                                        <option selected>Choose...</option>
                                        <option value="0">Male</option>
                                        <option value="1">Female</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="birthDate">Birth Date</label>
                                    <input required type="date" class="form-control" id="birthDate">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input required type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input required type="password" class="form-control" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input required type="text" class="form-control" id="phoneNumber" pattern="^\d+$" title="Contains only numbers">
                                </div>
                                <div class="form-group">
                                    <label for="selectUniversity">University</label>
                                    <select required class="form-control" id="selectUniversity">
                                        <option></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="degree">Degree</label>
                                    <input required type="text" class="form-control" id="degree">
                                </div>
                                <div class="form-group">
                                    <label for="GPA">GPA</label>
                                    <input required type="text" class="form-control" id="GPA" pattern="^(?:4(?:\.0)?|[0-3](?:\.[0-99])?|0?\.[1-99])$" title="Contains only numbers">
                                </div>
                                <div class="form-group">
                                    <label for="salary">Salary</label>
                                    <input required type="text" class="form-control" id="salary" pattern="^\d+$" title="Contains only numbers">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="btnDone" class="btn btn-success">Submit</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/model/employee.js"></script>
}
